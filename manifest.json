{
  "manifest_version": 2,

  "name": "blog-skipper",
  "description": "blog-skipper",
  "version": "0.1",

  "applications": {
    "gecko": {
      "id": "blog-skipper@ris58h"
    }
  },

  "permissions": [
    "contextMenus"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}

{
  "manifest_version": 2,

  "name": "blog-skipper",
  "description": "blog-skipper",
  "version": "0.1",

  "applications": {
    "gecko": {
      "id": "blog-skipper@ris58h"
    }
  },

  "permissions": [
    "contextMenus",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    "settings.json"
  ]
}
